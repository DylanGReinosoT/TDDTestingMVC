@model TDDTestingMVC1.Models.OpinionesCliente

@{
    ViewData["Title"] = "Eliminar Opinión de Cliente";
}

<h1 class="text-center text-danger">Eliminar Opinión de Cliente</h1>

@if (Model != null)
{
    <div class="card border-danger">
        <h5 class="card-header bg-danger text-white">Confirmación de Eliminación</h5>
        <div class="card-body">
            <p>¿Estás seguro de que deseas eliminar la siguiente opinión?</p>

            <dl class="row">
                <dt class="col-sm-3">ID de Opinión:</dt>
                <dd class="col-sm-9">@Model.OpinionID</dd>

                <dt class="col-sm-3">Cliente:</dt>
                <dd class="col-sm-9">@Model.ClienteID</dd>

                <dt class="col-sm-3">Producto:</dt>
                <dd class="col-sm-9">@Model.ProductoID</dd>

                <dt class="col-sm-3">Comentario:</dt>
                <dd class="col-sm-9">@Model.Comentario</dd>

                <dt class="col-sm-3">Calificación:</dt>
                <dd class="col-sm-9">@Model.Calificacion</dd>
            </dl>

            <form asp-action="Delete" asp-route-id="@Model.OpinionID" method="post">
                @Html.AntiForgeryToken()
                <button id="btn-Delete" type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        No se pudo encontrar la opinión a eliminar.
    </div>
}