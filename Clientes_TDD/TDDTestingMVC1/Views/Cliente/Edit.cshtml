@model TDDTestingMVC1.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="text-center">Editar Cliente</h1>
<div class="card">
    <h5 class="card-header">Formulario de Cliente</h5>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "Cliente", FormMethod.Post))
        {
            <!-- Código Cliente (oculto, para mantener el ID) -->
            <input type="hidden" asp-for="Codigo" />

            <div class="row g-3">
                <!-- Cedula -->
                <div class="col-md-4">
                    <label for="Cedula" class="form-label">Cedula</label>
                    <input asp-for="Cedula" class="form-control" id="Cedula" maxlength="10" required />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <!-- Apellidos -->
                <div class="col-md-4">
                    <label for="Apellidos" class="form-label">Apellidos</label>
                    <input asp-for="Apellidos" class="form-control" id="Apellidos" required />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>

                <!-- Nombres -->
                <div class="col-md-4">
                    <label for="Nombres" class="form-label">Nombres</label>
                    <input asp-for="Nombres" class="form-control" id="Nombres" required />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>

                <!-- Fecha Nacimiento -->
                <div class="col-md-4">
                    <label for="FechaNacimiento" class="form-label">Fecha Nacimiento</label>
                    <input asp-for="FechaNacimiento" class="form-control" id="FechaNacimiento" type="date" required />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <!-- Mail -->
                <div class="col-md-4">
                    <label for="Mail" class="form-label">Correo Electrónico</label>
                    <input asp-for="Mail" class="form-control" id="Mail" required />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <!-- Telefono -->
                <div class="col-md-4">
                    <label for="Telefono" class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" id="Telefono" maxlength="9" required />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <!-- Dirección -->
                <div class="col-md-4">
                    <label for="Direccion" class="form-label">Dirección</label>
                    <input asp-for="Direccion" class="form-control" id="Direccion" required />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <!-- Estado -->
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Estado" class="form-check-input" type="checkbox" id="Estado" />
                        <label class="form-check-label" for="Estado">
                            Activo
                        </label>
                    </div>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Botón de Guardar -->
                <div class="col-12">
                    <button id="btn-Edit" class="btn btn-success" type="submit">Actualizar Cliente</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
