@model IEnumerable<TDDTestingMVC1.Models.Producto>

@{
    ViewData["Title"] = "Administración de Productos";
}

<h1 class="text-center">Administración de Productos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card">
    <h5 class="card-header bg-primary text-white">Listado de Productos</h5>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductoID)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreProducto)</th>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.UnitsInStock)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductoID</td>
                        <td>@item.NombreProducto</td>
                        <td>@item.Precio.ToString("C")</td>
                        <td>@item.UnitsInStock</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ProductoID" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.ProductoID" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProductoID" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Crear Producto
            </a>
        </div>
    </div>
</div>
