@model TDDTestingMVC1.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<h1 class="text-center">Crear Producto</h1>
<div class="card">
    <h5 class="card-header">Formulario de Producto</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            <div class="row g-3">
                <!-- Nombre -->
                <div class="col-md-6">
                    <label for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="NombreProducto" class="form-control" id="Nombre" required />
                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                </div>

                <!-- Precio -->
                <div class="col-md-4">
                    <label for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" class="form-control" id="Precio" type="number" step="0.01" required />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <!-- Stock -->
                <div class="col-md-4">
                    <label for="Stock" class="form-label">Stock</label>
                    <input asp-for="UnitsInStock" class="form-control" id="Stock" type="number" required />
                    <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                </div>

                <!-- Estado -->
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="Estado" class="form-check-input" type="checkbox" id="Estado" />
                        <label class="form-check-label" for="Estado">
                            Disponible
                        </label>
                    </div>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Botón de Guardar -->
                <div class="col-12">
                    <button id="btn-Submit" class="btn btn-primary" type="submit">Guardar Producto</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
